#!/bin/bash

# Set the correct path to the python interpreter
PYTHON="/usr/bin/python3"

# Check if a filename is provided as an argument
if [ "$#" -eq 1 ]; then
    FILENAME="$1"
    # Run checker.py on the specified file
    $PYTHON checker.py "$FILENAME"
else
    # Run checker.py on all supported files in the current directory
    $PYTHON checker.py
fi
# Run _git.py to stage and commit changes with a custom message
read -p "Enter commit message for _git.py: " GIT_COMMIT_MESSAGE
$PYTHON _git.py "$GIT_COMMIT_MESSAGE"

# Run main.py to format and check style, and commit changes with a custom message
read -p "Enter commit message for main.py: " MAIN_COMMIT_MESSAGE
$PYTHON main.py "$FILENAME" "$MAIN_COMMIT_MESSAGE"
